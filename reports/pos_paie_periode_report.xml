<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <report
        id="report_pos_paie_periode"
        model="pos.paie.periode"
        string="Rapport Période de Paie"
        report_type="qweb-pdf"
        name="pos_paie.report_pos_paie_periode_template"
        file="pos_paie.report_pos_paie_periode_template"
        print_report_name="'Rapport_Paie_' + object.name"
    />
    <template id="report_pos_paie_periode_template" name="Rapport Période de Paie">
           <t t-call="web.html_container">
            <t t-foreach="docs" t-as="periode">
                <h2>Rapport de la période de paie : <span t-esc="periode.name"/></h2>
                <h3>Statistiques Globales</h3>
                <ul>
                    <li>Nombre de vendeurs : <span t-esc="len(periode.ligne_ids)"/></li>
                    <li>Total commandes : <span t-esc="periode.total_commandes"/></li>
                    <li>Total BP : <span t-esc="periode.total_bp"/></li>
                    <li>Total commissions : <span t-esc="periode.commission_total"/></li>
                    <li>Coût total des cartes : <span t-esc="periode.total_commandes - periode.commission_total"/></li>
                    <li>Total à payer : <span t-esc="periode.montant_net_total"/></li>
                </ul>
                <h3>Détail par Vendeur</h3>
                <table class="table table-condensed table-bordered">
                    <thead>
                        <tr>
                            <th>Numéro Carte</th>
                            <th>Vendeur</th>
                            <th>Nb Commandes</th>
                            <th>Total Commandes</th>
                            <th>Total BP</th>
                            <th>Commission</th>
                            <th>Coût Carte</th>
                            <th>Montant Net à Payer</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="sorted(periode.ligne_ids, key=lambda l: l.vendeur_card or '')" t-as="ligne">
                            <tr>
                                <td><span t-esc="ligne.vendeur_card"/></td>
                                <td><span t-esc="ligne.vendeur_id.display_name"/></td>
                                <td><span t-esc="ligne.nb_commandes"/></td>
                                <td><span t-esc="ligne.total_commandes"/></td>
                                <td><span t-esc="ligne.total_bp"/></td>
                                <td><span t-esc="ligne.commission"/></td>
                                <td><span t-esc="5"/></td>
                                <td><span t-esc="ligne.montant_net"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </t>
        </t>
        </template>

        <!-- Action report PDF -->
   



</odoo>